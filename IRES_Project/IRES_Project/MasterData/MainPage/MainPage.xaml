<UserControl x:Class="IRES_Project.MasterData.MainPage.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ux="clr-namespace:IRES_Project.UC" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:uc="clr-namespace:CustomControls.GlobalControls;assembly=CustomControls"
        
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}" 
        Name="mainWindow">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
            <!--#region Control bar-->
        <Grid Grid.Row="0">
            <uc:ControlBarUC FontSize="20" Tag="Màn hình chính"></uc:ControlBarUC>
        </Grid>
            <!--#endregion-->
        
            <!--#region App control bar-->
        <Grid Grid.Row="1">
            
            <Border BorderBrush="Black" BorderThickness="1">
                <DockPanel>
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock FontSize="20" VerticalAlignment="Center" Margin="10 4 0 0"> Desktop</TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <materialDesign:PackIcon Kind="Account" Width="30" Height="30" Margin="0 0 10 0"/>
                        <TextBlock FontSize="20" VerticalAlignment="Center" Margin="0 0 0 0">Admin</TextBlock>
                        <materialDesign:PackIcon Kind="ChevronDown" Width="30" Height="30" />
                    </StackPanel>
                </DockPanel>
            </Border>

        </Grid>
            <!--#endregion-->
        
        
        
        
        <!--#region Main window-->
        <Grid Grid.Row="2" Margin="0 10 0 0">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <!--#region Left menu-->
            <Grid Grid.Column="0">
                <ux:UserControlMenu></ux:UserControlMenu>
            </Grid>
            <!--#endregion-->
                        
            <!--#region Right Menu-->
            <Border  Grid.Column="1"    BorderBrush="Black" BorderThickness="2" >
                <GroupBox Padding="0">
                    <!--#region Header-->
                    <GroupBox.Header >
                        <StackPanel MaxHeight="20" Margin="0 5 0 10 " HorizontalAlignment="Center">
                            <Label FontWeight="Bold" FontSize="15" Foreground="White">Danh sách nhân viên</Label>
                        </StackPanel>
                    </GroupBox.Header>
                    
                    <!--#endregion-->
                    <Grid OpacityMask="#FF423535">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="6*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF85BDD6" Offset="0"/>
                            <GradientStop Color="#FF2F7B91" Offset="0.478"/>
                            <GradientStop Color="#FF4492A8" Offset="0.973"/>
                            <GradientStop Color="#FF72A6BF" Offset="0.227"/>
                            <GradientStop Color="#FF2EA4C5" Offset="0.739"/>
                        </LinearGradientBrush>
                    </Grid.Background>

                        <!--TestClick="Test_Cmd"-->
                    <!--#region MasterDataHeader --> 
                    <Grid Grid.Row="0" Margin="0 10 0 0 " HorizontalAlignment="Stretch" Width="auto">
                            <uc:MasterDataHeader CustomClick ="Seach_Emp"   RefreshClick="Refresh_Data" ></uc:MasterDataHeader>
                    </Grid>
                    <!--#endregion-->
                        <!--ItemsSource="{Binding ListEmployee, Mode=TwoWay}"-->
                    <Grid Grid.Row="1">
                            <DataGrid IsReadOnly="False" BorderBrush="Black" BorderThickness="1"  AutoGenerateColumns="False"  x:Name="dataGrid" Grid.Row ="1" 
                                  HorizontalAlignment="Left" Margin="20"   VerticalAlignment="Top"  CanUserSortColumns="True"  ColumnWidth="*" 
                                  materialDesign:DataGridAssist.CellPadding="13 8 8 8" materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="BorderBrush" Value="Black" />
                                <Setter Property="Background" Value="MediumPurple" />
                                <Setter Property="BorderThickness" Value="0 0 1 1"></Setter>
                                <Setter Property="Margin" Value="0 0 0 1"></Setter>
                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                                <Setter Property="Foreground" Value="White"></Setter>
                                <Setter Property="MinHeight" Value="40"/>
                            </Style>

                            <Style TargetType="DataGridCell">
                                <Setter Property="MinHeight" Value="50"/>
                                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type DataGridCell}">
                                            <Grid Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                         </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Width="2*" Header="Mã nhân viên"  Binding="{Binding EmployeeCode}"/>
                            <DataGridTextColumn Width="2*" Header="Tên nhân viên" Binding="{Binding EmployeeName}"  />
                            <DataGridTextColumn Width="2*" Header="Chức vụ"       Binding="{Binding Role}" />
                            <DataGridTextColumn Width="2*" Header="Số ĐT"         Binding="{Binding PhoneNb}" />
                            <DataGridTemplateColumn x:Name="Edit_Col" Width="1*" Header="Tùy chỉnh" >
                                <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock Width="15"></TextBlock>
                                                    <Button Width="auto" Name="btn_Edit" Click="Edit_Click">
                                                        <materialDesign:PackIcon Width="auto" Kind="AccountEdit" Margin= " 0 0 0 0" />
                                                    </Button>
                                                    <TextBlock Width="10"></TextBlock>
                                                    <Button Width="auto">
                                                        <materialDesign:PackIcon Width="auto" Kind="Delete" Margin= " 0 0 0 0" />
                                                    </Button>
                                                    <TextBlock Width="10"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                         </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        
                    <Grid Grid.Row="2" VerticalAlignment="Center" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0"></Grid>
                       
                            <Grid Grid.Column="1">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Height="25" Margin="0 0 5 0" HorizontalAlignment="Left" Name="btnFirst" Click="btnFirst_Click" 
                                     VerticalAlignment="Bottom" Width="50" Content="&lt;&lt;" Opacity="0.75">
                                        <!--<Button.InputBindings>
                                            <KeyBinding Key="Enter"/>
                                        </Button.InputBindings>-->
                                    </Button>
                                    <Button Height="25" Margin="0" HorizontalAlignment="Center" Name="btnPrev"  Click="btnPrev_Click"
                                     VerticalAlignment="Bottom" Width="50" Content="&lt;"     Opacity="0.75"/>
                                </StackPanel>
                            </Grid>
                        
                            <Grid Grid.Column="2">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Height="25" HorizontalAlignment="Right"  Margin="5 0 5 0"
                             Name="btn1" Click="Btn1_Click" VerticalAlignment="Bottom" Width="50" Content="1"  Opacity="1" BorderBrush="Black" BorderThickness="1"></Button>
                                    <Button Height="25" HorizontalAlignment="Right"  Margin="5 0 5 0"
                             Name="btn2" Click="Btn2_Click" VerticalAlignment="Bottom" Width="50" Content="2"  Opacity="0.75"></Button>
                                    <Button Height="25" HorizontalAlignment="Right"  Margin="5 0 5 0"
                             Name="btn3" Click="Btn3_Click" VerticalAlignment="Bottom" Width="50" Content="3"  Opacity="0.75"></Button>
                                    <Button Height="25" HorizontalAlignment="Right"  Margin="5 0 5 0"
                             Name="btn4" Click="Btn4_Click" VerticalAlignment="Bottom" Width="50" Content="4"  Opacity="0.75"></Button>
                                    <Button Height="25" HorizontalAlignment="Right"  Margin="5 0 5 0"
                             Name="btn5" Click="Btn5_Click" VerticalAlignment="Bottom" Width="50" Content="5"  Opacity="0.75"></Button>
                                </StackPanel>
                            </Grid>
                        
                            <Grid Grid.Column="3">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Height="25" Margin="0 0 5 0" HorizontalAlignment="Center"  VerticalAlignment="Bottom"
                                    Name="btnNext" Click="btnNext_Click"  Width="50" Content="&gt;"      Opacity="0.75"/>
                                    <Button Height="25" Margin="0"       HorizontalAlignment="Right"   VerticalAlignment="Bottom" 
                                    Name="btnLast" Click="btnLast_Click"  Width="50" Content="&gt;&gt;"  Opacity="0.75"/>
                                </StackPanel>
                            </Grid>
                        
                            <Grid Grid.Column="4"></Grid>
                            
                    </Grid>
                        
                    <Grid Grid.Row="3" >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"   VerticalAlignment="Top">
                            <CheckBox x:Name="myCheck"  IsEnabledChanged="MyCheck_IsEnabledChanged" IsEnabled="{Binding Refresh}" Visibility="Collapsed"></CheckBox>
                            <Label  x:Name="lblpageInformation" Margin=" 0 " HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                             HorizontalAlignment=" Center" VerticalAlignment="Bottom" Height="30"  Width="150" Background="MediumPurple" BorderThickness="1"/>
                            <!--<ComboBox x:Name="cbNumberOfRecords" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5 0 5 0"
                             Width="100"  SelectedIndex="0" SelectionChanged="cbNumberOfRecords_SelectionChanged" Opacity="0.75"/>-->

                            </StackPanel>
                    </Grid>

                    </Grid>
                </GroupBox>
            </Border>
            
            <!--#endregion-->
            
          
        </Grid>
        <!--#endregion-->
    </Grid>
</UserControl>
