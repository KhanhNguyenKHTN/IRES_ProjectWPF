<UserControl x:Class="CustomControls.Statistic.StatisticHeaderUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControls.Statistic"
             mc:Ignorable="d">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition  Width="20*"/>
        <ColumnDefinition  Width="70*"/>
    </Grid.ColumnDefinitions>
    <Grid Grid.Column="0" Margin="10">
      <TextBlock>
        <Label>Xem theo</Label>
        <ComboBox>
          <ComboBoxItem IsSelected="True">Ngày</ComboBoxItem>
          <ComboBoxItem>Tuần</ComboBoxItem>
          <ComboBoxItem>Tháng</ComboBoxItem>
          <ComboBoxItem>Năm</ComboBoxItem>
      </ComboBox>
      </TextBlock>
    </Grid>

    <Grid Grid.Column="1" Margin="10">
      <TextBlock>
        <Label>Chọn ngày</Label>
        <DatePicker SelectedDate="2000-12-31" SelectedDateFormat="Long"></DatePicker>
      </TextBlock>
    </Grid>
  </Grid>
</UserControl>
